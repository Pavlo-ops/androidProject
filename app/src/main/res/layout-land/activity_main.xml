<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.97" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/backdown" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/backdown" />

        <View
            android:id="@+id/photoProfile"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:background="@color/profileBlue"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_myProfile"
            android:textColor="@color/profileTitle"
            android:textSize="@dimen/title_size_text"
            app:fontFamily="@font/opensans_semibold"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toTopOf="@id/topGuideline" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_marginTop="@dimen/margin_profile"
            android:src="@drawable/ic_avatar"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:shapeAppearanceOverlay="@style/circular" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_profile"
            android:text="@string/name_myProfile"
            android:textColor="@color/profileTitle"
            android:textSize="@dimen/name_size_text"
            app:fontFamily="@font/opensans_semibold"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/avatar" />

        <TextView
            android:id="@+id/career"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_profile_info"
            android:text="@string/job_myProfile"
            android:textColor="@color/textJob"
            android:textSize="@dimen/job_size_text"
            app:fontFamily="@font/opensans_semibold"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_profile"
            android:text="@string/home_address"
            android:textColor="@color/textJob"
            android:textSize="@dimen/job_size_text"
            app:fontFamily="@font/opensans_semibold"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/career" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageButtonFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_click_profile"
            android:src="@drawable/facebook"
            app:layout_constraintEnd_toStartOf="@id/imageButtonIn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/photoProfile" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageButtonIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/in"
            app:layout_constraintEnd_toStartOf="@id/imageButtonInst"
            app:layout_constraintStart_toEndOf="@id/imageButtonFacebook"
            app:layout_constraintTop_toBottomOf="@id/photoProfile"
            app:layout_constraintTop_toTopOf="@id/imageButtonFacebook"

            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageButtonInst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/inst"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toEndOf="@id/imageButtonIn"
            app:layout_constraintTop_toBottomOf="@id/photoProfile"
            app:layout_constraintTop_toTopOf="@id/imageButtonFacebook"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_click_profile"
            android:layout_marginBottom="@dimen/margin_between_buttons"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/edit_button"
            android:textAllCaps="false"
            android:textColor="@color/textEditButton"
            android:textSize="@dimen/job_size_text"
            app:cornerRadius="6dp"
            app:layout_constraintBottom_toTopOf="@id/viewContactButton"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/imageButtonFacebook"
            app:strokeColor="@color/profileBlue"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewContactButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/view_contact_button"
            android:textColor="@color/light"
            android:textSize="@dimen/job_size_text"
            app:cornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>





