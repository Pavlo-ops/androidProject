<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>

        <item name="style" >@style/ButtonGoogleViewStyle</item>
    </style>

    <!-- Themes for google button -->
    <style name="ButtonGoogleViewStyle">
        <item name="textSize">@dimen/size_google_button</item>
        <item name="width">@dimen/width_google</item>
        <item name="height">@dimen/height_google</item>
        <item name="backgroundColor">@color/light</item>
        <item name="textColor">@color/black</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="text">@string/button_google</item>
    </style>

</resources>