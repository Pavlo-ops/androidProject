<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profileBlue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/backdown"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/backdown"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_lets_get"
        android:textColor="@color/profileTitle"
        android:textSize="@dimen/title_size_text"
        android:fontFamily="@font/opensans_semibold"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toTopOf="@id/topGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        android:layout_marginTop="@dimen/margin_top_title"
        />

    <TextView
        android:id="@+id/labelBottomTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_bottom_title"
        android:textColor="@color/profileTitle"
        android:textSize="@dimen/size_bottom_title"
        android:fontFamily="@font/opensans_regular"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        android:layout_marginTop="@dimen/margin_profile_info"
        />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_email"
        android:textColor="@color/greyAuth"
        android:textSize="@dimen/job_size_text"
        android:fontFamily="@font/opensans_semibold"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/labelBottomTitle"
        android:layout_marginTop="@dimen/margin_profile"
        android:layout_marginStart="@dimen/margin_profile_info"
        />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/profileTitle"
        android:textSize="@dimen/name_size_text"
        android:fontFamily="@font/opensans_semibold"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/labelEmail"
        android:layout_marginTop="@dimen/margin_profile_info"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/greyAuth"
        android:autofillHints="emailAddress"
        android:labelFor="@id/labelEmail" />

    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_password"
        android:textColor="@color/greyAuth"
        android:textSize="@dimen/job_size_text"
        android:fontFamily="@font/opensans_semibold"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        android:layout_marginTop="@dimen/margin_profile"
        android:layout_marginStart="@dimen/margin_profile_info"
        />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/profileTitle"
        android:textSize="@dimen/name_size_text"
        android:fontFamily="@font/opensans_semibold"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/labelPassword"
        android:layout_marginTop="@dimen/margin_profile_info"
        android:inputType="textPassword"
        android:backgroundTint="@color/greyAuth"
        android:autofillHints="emailAddress"
        android:labelFor="@id/labelPassword" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkboxRemember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/editPassword"
        android:text="@string/remember_me"
        android:textColor="@color/textJob"
        android:fontFamily="@font/opensans_semibold"
        android:layout_marginTop="@dimen/margin_profile_info"
        android:button="@drawable/checkbox_border"
        android:paddingStart="@dimen/padding_text_checkBox"
        android:paddingEnd="@dimen/padding_text_checkBox"
        />

    



    


</androidx.constraintlayout.widget.ConstraintLayout>