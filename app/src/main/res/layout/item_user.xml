<?xml version="1.0" encoding="utf-8"?><!-- todo: do nut use constraint -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/normal_margin"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginEnd="@dimen/normal_margin"
    android:background="@drawable/item_border"
    android:paddingHorizontal="@dimen/small_padding"
    android:paddingVertical="@dimen/small_padding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatarUser"
        android:layout_width="@dimen/size_user_avatar"
        android:layout_height="@dimen/size_user_avatar"
        app:layout_constraintEnd_toStartOf="@id/name"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_user_avatar" />


    <!-- todo: maybe font settings move to font style -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_semibold"
        android:lines="1"
        android:text="@string/name_myProfile"
        android:textColor="@color/itemNameColor"
        android:textSize="@dimen/size_name_text"
        app:layout_constraintEnd_toStartOf="@id/basket"
        app:layout_constraintStart_toEndOf="@id/avatarUser"
        app:layout_constraintTop_toTopOf="@id/avatarUser" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/job"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_regular"
        android:lines="1"
        android:text="@string/job_myProfile"
        android:textColor="@color/itemJobColor"
        android:textSize="@dimen/size_bottom_title"
        app:layout_constraintEnd_toStartOf="@id/basket"
        app:layout_constraintStart_toEndOf="@id/avatarUser"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_basket"
        app:layout_constraintBottom_toBottomOf="@id/avatarUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintTop_toTopOf="@id/avatarUser"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>